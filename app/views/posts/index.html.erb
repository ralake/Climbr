<% if !current_user.nil? %>
	<%= link_to "Post an image", new_post_path %>
<% end %>
<% if @posts.any? %>
	<% @posts.each do |post| %>
		<li>
			<%= image_tag post.image.url(:medium) %>

			<%= link_to "Like", post_likes_path(post), class: 'likes-link' %>
			<span class="likes-count"> <%= post.likes.count %> </span> likes

			<%= post.description %>
			<% if !current_user.nil? %>
				<%= link_to "Comment", new_post_comment_path(post) %>
			<% end %>
			<% if !current_user.nil? && post.user_id == current_user.id%>
				<%= link_to "Delete post", post_path(post), method: :delete %>
				<%= link_to "Edit post", edit_post_path(post) %>
			<% end %>
			<% if post.comments.any? %>
				<%post.comments.each do |comment| %>
					<li>
						<%= comment.comments %>
						<p>Posted <%= time_ago_in_words(comment.created_at) %></p>
					</li>
				<% end %>
			<% end %>
		</li>
	<% end %>
<% else %>
	No images
<% end %>